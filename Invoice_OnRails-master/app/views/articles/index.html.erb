<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Codice</th>
      <th>Descrizione</th>
      <th>Prezzo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.titolo %></td>
        <td><%= article.codice %></td>
        <td><%= article.descrizione %></td>
        <td><%= article.prezzo %></td>
        <td><%= link_to 'Show', article, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', article, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

