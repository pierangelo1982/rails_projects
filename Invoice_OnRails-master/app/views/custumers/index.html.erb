<p id="notice"><%= notice %></p>

<h1>Clienti</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Denominazione</th>
      <th>Piva</th>
      <th>Codfisc</th>
      <th>Telefono</th>
      <th>Cellulare</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custumers.each do |custumer| %>
      <tr>
        <td><%= custumer.denominazione %></td>
        <td><%= custumer.piva %></td>
        <td><%= custumer.codfisc %></td>
        <td><%= custumer.telefono %></td>
        <td><%= custumer.cellulare %></td>
        <td><%= custumer.email %></td>
        <td><%= link_to 'Vedi', custumer, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Modifica', edit_custumer_path(custumer), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Cancella', custumer, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'AGGIUNGI', new_custumer_path, class: 'btn btn-info btn-md' %>
