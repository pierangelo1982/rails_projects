
<h1 class="header">Fornitori</h1>

<table class="responsive-table striped">
  <thead>
    <tr>
      <th>Denominazione</th>
      <th>Sconto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.discount %></td>
        <td><%= link_to 'launch', supplier, class: 'material-icons' %></td>
        <td><%= link_to 'mode_edit', edit_supplier_path(supplier), class: 'material-icons' %></td>
        <td><%= link_to 'delete_forever', supplier, method: :delete, class: 'material-icons', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Aggiungi', new_supplier_path, class: 'btn red-motowork' %>
