<p id="notice"><%= notice %></p>

<h1 class="header">Impiegati</h1>

<table class="responsive-table striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ruolo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.role %></td>
        <td><%= link_to 'launch', employee, class: 'material-icons' %></td>
        <td><%= link_to 'mode_edit', edit_employee_path(employee), class: 'material-icons' %></td>
        <td><%= link_to 'delete_forever', employee, method: :delete, class: 'material-icons', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Aggiungi', new_employee_path, class: 'btn cyan darken-2' %>
