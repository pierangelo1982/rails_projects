<div class="row">
  <div class="col s6">
      <p>
        <strong>Denominazione:</strong>
        <%= @address_book.name %>
      </p>

      <p>
        <strong>P.iva:</strong>
        <%= @address_book.vat %>
      </p>

      <p>
        <strong>Cod.Fisc::</strong>
        <%= @address_book.tax_code %>
      </p>

      <p>
        <strong>Indirizzo:</strong>
        <%= @address_book.address %>, <%= @address_book.address_nr %><br>
        <%= @address_book.zip %> <%= @address_book.city %><br>
        <%= @address_book.country %>
      </p>

      <p>
        <strong>Tel:</strong>
        <%= @address_book.phone %>
      </p>

      <p>
        <strong>Fax:</strong>
        <%= @address_book.fax %>
      </p>

      <p>
        <strong>Email:</strong>
        <a hreg="mailto:<%= @address_book.email %>"><%= @address_book.email %></a>
      </p>

      <p>
        <strong>Web:</strong>
        <a href="<%= @address_book.web %>" target="_blank"><%= @address_book.web %></a>
      </p>

      <p>
        <strong>Note:</strong>
        <%= @address_book.note %>
      </p>
  </div>

  <div class="col s6">
    <h5>Coordinate Bancarie</h5>
    <% @address_book.address_book_banks.each do |bank| %>
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= bank.name %></span>
        <p>
            <strong>ABI: </strong> <%= bank.abi %><br>
            <strong>CAB: </strong> <%= bank.cab %><br>
            <strong>IBAN:</strong> <%= bank.iban %>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>

