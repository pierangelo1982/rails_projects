<p id="notice"><%= notice %></p>

<h1>Purchase Payment Deadlines</h1>

<table>
  <thead>
    <tr>
      <th>Purchase invoice</th>
      <th>Price</th>
      <th>Data</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_payment_deadlines.each do |purchase_payment_deadline| %>
      <tr>
        <td><%= purchase_payment_deadline.purchase_invoice %></td>
        <td><%= purchase_payment_deadline.price %></td>
        <td><%= purchase_payment_deadline.data %></td>
        <td><%= purchase_payment_deadline.paid %></td>
        <td><%= link_to 'Show', purchase_payment_deadline %></td>
        <td><%= link_to 'Edit', edit_purchase_payment_deadline_path(purchase_payment_deadline) %></td>
        <td><%= link_to 'Destroy', purchase_payment_deadline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

