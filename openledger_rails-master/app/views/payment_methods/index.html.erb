<p id="notice"><%= notice %></p>

<h1 class="header">Payment Methods</h1>

<table class="responsive-table striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_methods.each do |payment_method| %>
      <tr>
        <td><%= payment_method.name %></td>
        <td><%= link_to 'launch', payment_method, class: 'material-icons' %></td>
        <td><%= link_to 'mode_edit', edit_payment_method_path(payment_method), class: 'material-icons' %></td>
        <td><%= link_to 'delete_forever', payment_method, method: :delete, class: 'material-icons', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment Method', new_payment_method_path, class: 'btn cyan darken-2' %>
