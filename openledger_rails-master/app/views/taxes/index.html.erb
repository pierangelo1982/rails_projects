<p id="notice"><%= notice %></p>

<h1 class="header">Tasse</h1>

<table class="responsive-table striped">
  <thead>
    <tr>
      <th>Tassa</th>
      <th>Valore</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taxes.each do |tax| %>
      <tr>
        <td><%= tax.name %></td>
        <td><%= tax.value %></td>
        <td><%= link_to 'launch', tax, class: 'material-icons' %></td>
        <td><%= link_to 'mode_edit', edit_tax_path(tax), class: 'material-icons' %></td>
        <td><%= link_to 'delete_forever', tax, method: :delete, class: 'material-icons', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tax', new_tax_path, class: 'btn cyan darken-2' %>
