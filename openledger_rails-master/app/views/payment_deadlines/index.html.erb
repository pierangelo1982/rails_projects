<h1>Scadenze Pagamento</h1>

<table>
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Price</th>
      <th>Data</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_deadlines.each do |payment_deadline| %>
      <tr>
        <td><%= payment_deadline.invoice %></td>
        <td><%= payment_deadline.price %></td>
        <td><%= payment_deadline.data %></td>
        <td><%= payment_deadline.paid %></td>
        <td><%= link_to 'Show', payment_deadline %></td>
        <td><%= link_to 'Edit', edit_payment_deadline_path(payment_deadline) %></td>
        <td><%= link_to 'Destroy', payment_deadline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

