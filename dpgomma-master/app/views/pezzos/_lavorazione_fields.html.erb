<div class="col-lg-12 cocoonx">
	<div class="col-lg-10" style="margin-left: 0px; padding-left: 0px;">
	

    	<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    		<%= f.label :codice %><br>
    		<%= f.text_field :codice, class: 'form-control' %>
  		</div>
  		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    		<%= f.label :titolo %><br>
    		<%= f.text_field :titolo, class: 'form-control' %>
  		</div>
  		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    		<%= f.label :descrizione %><br>
    		<%= f.text_area :descrizione, class: 'form-control' %>
  		</div>
  		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    		<%= f.label :prezzo %><br>
    		<%= f.text_field :prezzo, class: 'form-control' %>
  		</div>
  		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    		<%= f.label :sconto, 'eventuale sconto' %><br>
    		<%= f.text_field :sconto, class: 'form-control' %>
  		</div>
	
	</div><!-- col-lg-11 -->
	
	<div class="col-lg-2">
    	<br>
			<%=link_to_remove_association("rimuovi", f, { wrapper_class: 'cocoonx', class:"btn btn-danger"}) %>
	</div>
</div>