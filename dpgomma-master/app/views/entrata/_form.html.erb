<%= form_for(@entratum) do |f| %>
  <% if @entratum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entratum.errors.count, "error") %> prohibited this entratum from being saved:</h2>

      <ul>
      <% @entratum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-xs-12">
    <%= f.label :azienda_id %><br>
    <%= f.collection_select :azienda_id, Azienda.order(:denominazione), :id, :denominazione, {include_blank: true}, class: 'form-control', :id => 'request_azienda_id', :required => true %>

  </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
    <%= f.label :importaddt %><br>
    <%= f.text_field :importaddt, class: 'form-control' %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
    <%= f.label :numero %><br>
    <%= f.text_field :numero, class: 'form-control' %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
    <%= f.label :data %><br>
    <%= f.text_field :data, class: 'form-control' %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :data_ricezione %><br>
    <%= f.text_field :data_ricezione, class: 'form-control' %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :consegnato_da %><br>
    <%= f.text_field :consegnato_da, class: 'form-control' %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :imballo %><br>
    <%= f.text_field :imballo, class: 'form-control' %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :colli %><br>
    <%= f.text_field :colli, class: 'form-control' %>
  </div>
  <div class="col-xs-6">
    <%= f.label :pezzi_ricevuti, 'Pezzi Ricevuti' %><br>
    <%= f.text_field :pezzi_ricevuti, class: 'form-control' %>
  </div>
  <div class="col-xs-6">
    <%= f.label :pezzi_scartati, 'Pezzi Scartati' %><br>
    <%= f.text_field :pezzi_scartati, class: 'form-control' %>
  </div>
  <div class="col-xs-12">
    <%= f.label :riserva %><br>
    <%= f.check_box :riserva %>
  </div>
  <div class="col-xs-12">
    <%= f.label :note %><br>
    <%= f.text_area :note, class: 'form-control' %>
  </div>


  <!-- NESTED -->
 <div class="col-lg-12" style="margin-left: 0px;">
    <h3>MERCE DA LAVORARE</h3>
    <fieldset id="entratadata">
      <%= f.fields_for (:entratadata) do |item| %>
        <%= render 'entratadatum_fields', f: item %>
      <% end %>
      <div class="col-lg-1">
      <br>
      <%= link_to_add_association 'aggiungi', f, :entratadata, { class:"btn btn-primary" } %>
      </div>
    </fieldset>
  </div>

  <!-- FINE NESTED -->


  <div class="col-xs-12">
    <br>
    <br>
    <%= f.submit %>
  </div>
<% end %>
