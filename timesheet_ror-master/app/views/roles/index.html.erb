<h1>Ruoli</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.title %></td>
        <td><%= link_to 'Show', role, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_role_path(role), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', role, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

