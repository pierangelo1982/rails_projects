<p id="notice"><%= notice %></p>

<h1>Anagrafica Clienti</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Denominazione</th>
      <th>Telefono</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custumers.each do |custumer| %>
      <tr>
        <td><%= custumer.denominazione %></td>
        <td><%= custumer.telefono %></td>
        <td><%= custumer.email %></td>
        <td><%= link_to 'Show', custumer %></td>
        <td><%= link_to 'Edit', edit_custumer_path(custumer) %></td>
        <td><%= link_to 'Destroy', custumer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

