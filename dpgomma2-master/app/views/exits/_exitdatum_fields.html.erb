<div class="col-lg-12 cocoonx">
	<div class="col-lg-11" style="margin-left: 0px; padding-left: 0px;">

  <div class="col-xs-3">
    <%= f.label :quantita %><br>
    <%= f.number_field :quantita, class: 'form-control' %>
  </div>
  <div class="col-xs-3">
    <%= f.label :reso, 'Reso Non Lavorato' %><br>
    <%= f.number_field :reso, class: 'form-control formreso' %>
  </div>
    <div class="col-xs-3">
    <%= f.label :costoreso, 'Costo Reso €.' %><br>
    <%= f.text_field :costoreso, class: 'form-control formreso' %>
  </div>
    <div class="col-xs-3">
    <%= f.label :inscatolamentoprezzo, 'Costo Inscatolamento €.' %><br>
    <%= f.text_field :inscatolamentoprezzo, class: 'form-control forminscatolamento' %>
  </div>
  <!--<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :pezzo_id %><br>
    <%= f.grouped_collection_select :pezzo_id, Azienda.order(:denominazione), :pezzos, :denominazione, :id, :nome, {include_blank: true}, class: 'form-control' %>
  </div>-->
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <% if params[:temp_azienda] %>
    <%= f.label :lavorazione_id %><br>
    <%= f.grouped_collection_select :lavorazione_id, Pezzo.where('azienda_id=?', params[:temp_azienda]).order(:nome), :lavoraziones, :nome, :id, :titolo, {include_blank: true}, class: 'form-control' %>
    <% else %>
    <%= f.label :lavorazione_id %><br>
    <%= f.grouped_collection_select :lavorazione_id, Pezzo.order(:nome), :lavoraziones, :nome, :id, :titolo, {include_blank: true}, class: 'form-control' %>
    <% end %>
  </div>
  <div class="col-xs-12">
    <%= f.label :descrizione %><br>
    <%= f.text_field :descrizione, class: 'form-control' %>
  </div>
	
	</div><!-- col-lg-11 -->
	
	<div class="col-lg-1">
    	<br>
			<%=link_to_remove_association("rimuovi", f, { wrapper_class: 'cocoonx', class:"btn btn-danger"}) %>
	</div>
</div>
