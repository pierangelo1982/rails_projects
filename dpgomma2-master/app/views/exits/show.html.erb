<p id="notice"><%= notice %></p>

<div class="col-xs-12">
  <a href="/exits/<%= @exit.id %>/pdf.pdf" class="fa fa-print fa-3x" style="float: right" target="_Blank"></a>
</div>
<div class="col-xs-12">
    <hr>
</div>

<div class="col-md-6 anagrafica">
    <%= render 'anagrafica' %>
</div>

<div class="col-md-2">
</div>

<div class="col-md-4 intestario">
    <%= render 'intestatario' %>
</div>

<div class="col-md-12">
  <hr>
</div>


<div class="col-md-12 numerofattura">
<p>DDT Numero: <%= @exit.number_exit %>  Del: <%= @exit.data.strftime "%d-%m-%Y" %></p>
</div>



<!-- ASSOCIAZIO DDT -->
<div class="col-lg-12">
  <%= render 'entrata' %>
</div>

<!-- FINE ASSOCIAZIO -->
<div class="col-xs-3">
<p>
  <strong>Colli:</strong>
  <%= @exit.colli %>
</p>
</div>

<div class="col-xs-3">
<p>
  <strong>Quantita:</strong>
  <%= number_with_delimiter(@exit.exitdata.sum(:quantita), delimiter: ".") %>
</p>
</div>

<div class="col-xs-3">
<p>
  <strong>Non Lavorati:</strong>
  <%= number_with_delimiter(@exit.exitdata.sum(:reso), delimiter: ".") %>
</p>
</div>

<div class="col-xs-3">
<p>
  <strong>Quantita Totale:</strong>
  <%= number_with_delimiter(@exit.exitdata.sum(:quantita) + @exit.exitdata.sum(:reso), delimiter: '.') %>
</p>
</div>

<div class="col-xs-12">
<p>
  <strong>Note:</strong>
  <%= @exit.note %>
</p>
</div>

<div class="col-xs-4">
<p>
  <strong>Tipo trasporto:</strong>
  <%= @exit.tipo_trasporto %>
</p>
</div>

<div class="col-xs-4">
<p>
  <strong>Responsabile trasporto:</strong>
  <%= @exit.responsabile_trasporto %>
</p>
</div>

<div class="col-xs-4">
<p>
  <strong>Aspetto:</strong>
  <%= @exit.aspetto %>
</p>
</div>

<div class="col-xs-12">
<p>
  <strong>Responsabile trasporto:</strong>
  <%= @exit.responsabile_trasporto %>
</p>
</div>

<div class="col-xs-12">
<p>
  <strong>Altro:</strong>
  <%= @exit.altro %>
</p>
</div>

<div class="col-xs-12">
<p>
  <strong>Consegnato:</strong>
  <%= @exit.consegnato %>
</p>
</div>
