  <div class="col-lg-8"><h3>Pezzi e lavorazioni associate</h3></div>

  <div class="col-lg-4">
    <h4>Filtra per Azienda</h4>
    <%= form_tag({ controller: 'pezzos', action: 'index' }, method: 'get') do %>
    <%= select_tag 'temp_azienda', options_from_collection_for_select(Azienda.all, :id, :denominazione),  class: 'form-control' %>
    <button type="submit" class="btn btn-primary" style="float:right">Filtra</button>
    <% end %>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Azienda</th>
      <th>Codice Pezzo</th>
      <th>Lavorazioni</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pezzos.each do |pezzo| %>
      <tr>
        <td><%= pezzo.azienda.denominazione %></td>
        <td><%= pezzo.codice %></td>
        <td><% pezzo.lavoraziones.each do |lav| %>
            <%= lav.titolo %><br>
          <% end %>
        </td>
        <td><%= link_to 'Vedi', pezzo, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Modifica', edit_pezzo_path(pezzo), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Elimina', pezzo, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Aggiungi Pezzo', new_pezzo_path, class: 'btn btn-info btn-md' %>
