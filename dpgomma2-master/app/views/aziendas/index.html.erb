
<h3>Anagrafica Clienti</h3>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Denominazione</th>
      <th>Piva</th>
      <th>Codfisc</th>
      <th>Tel</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aziendas.each do |azienda| %>
      <tr>
        <td><%= azienda.denominazione %></td>
        <td><%= azienda.piva %></td>
        <td><%= azienda.codfisc %></td>
        <td><%= azienda.tel %></td>
        <td><%= azienda.email %></td>
        <td><%= link_to 'Vedi', azienda, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Modifica', edit_azienda_path(azienda), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Elimina', azienda, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'aggiungi nuova azienda', new_azienda_path, class: 'btn btn-info btn-md' %>
