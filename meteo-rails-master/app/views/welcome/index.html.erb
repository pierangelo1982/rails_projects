<h1>Weather in <%= params[:city] %></h1>

<div class="row">
	<% @obj["list"].each do |ob| %>
		<div class="col-xs-12 col-sm-4 col-md-3">
			<div class="col-xs-12 meteo-widget">
		        <h4 class="text-center">
		        	<%= (Time.at(ob['dt'])).strftime("%d/%m/%Y") %>
		        </h4>
		        <h2 class="text-center"><%= ob['temp']['day'] %>°C</h2>
		        <h4 class="text-center">
		        	<img src="http://openweathermap.org/img/w/<%= ob['weather'].first['icon'] %>.png"><br>
		        	<%= ob['weather'].first['description'] %>
		    	</h4>
		        <h4 class="text-center">
		        	Min: <%= ob["temp"]["min"] %>°C<br>
		        	Max: <%= ob["temp"]["max"] %>°C
		        </h4>
		        <p class="text-center">
		        	<a href="/welcome/detail?&city=<%= params[:city] %>&time=<%= ob['dt'] %>" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i> more</a>
		    	</p>
		    </div>
		</div><!-- /col -->
	<% end %>
</div><!-- /row -->
