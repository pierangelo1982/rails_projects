<p id="notice"><%= notice %></p>
<div class="col-lg-12">
  <div class="row" style="float: right; margin-top:10px">
  <a href="/extraworks/<%= @extrawork.id %>/stampaextrawork.pdf" target="_Blank" class="btn btn-primary">STAMPA RESOCONTO</a>
</div>

<div class="col-md-4">
  <p>
    <strong>Targa:</strong>
    <%= @extrawork.car.targa %>
  </p>
</div>

<div class="col-md-4">
  <p>
    <strong>Veicolo:</strong>
    <%= @extrawork.car.marca %> - <%= @extrawork.car.modello %>
  </p>
</div>

<div class="col-md-4">
  <p>
    <strong>Propietario:</strong>
    <%= @extrawork.car.owner.denominazione %>
  </p>
</div>


<div class="col-md-12">
<p>
  <strong>Km:</strong>
  <%= @extrawork.km %>
</p>
</div>


<div class="col-md-12">
<p>
  <strong>Ore Manodopera:</strong>
  <%= @extrawork.tempo.strftime "%R" %>
</p>
</div>

<div class="col-md-12">
  <p>
    <strong>Prezzo:</strong>
    €. <%= @extrawork.try(:prezzo) %> + Iva
  </p>
</div>

<div class="col-md-12">
<strong>DESCRIZIONE:</strong>
<br><%= @extrawork.descrizione %>
</div>

<div class="col-md-12">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Lavoro</th>
      <th>Quantità</th>
      <th>Codice</th>
      <th>Prezzo €.</th>
    </tr>
  </thead>

  <tbody>
    <% Extralavorowork.where(extrawork_id: @extrawork.id).each do |extralavorowork| %>
      <tr>
        <td><%= extralavorowork.catextrawork.try(:nome) %></td>
        <td><%= extralavorowork.quantita %></td>
        <td><%= extralavorowork.codice %></td>
        <td><%= extralavorowork.importo %></td>
      </tr>
    <% end %>
    <% Scriviwork.where(extrawork_id: @extrawork.id).each do |scriviwork| %>
      <tr>
        <td><%= scriviwork.try(:descrizione) %></td>
        <td><%= scriviwork.quantita %></td>
        <td><%= scriviwork.codice %></td>
        <td><%= scriviwork.importo %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>


<div class="col-md-12">
  <p>
    <strong>Note:</strong>
    <%= @extrawork.note %>
  </p>
</div>


<div class="col-md-12">
  <%= link_to 'Edit', edit_extrawork_path(@extrawork) %> |
  <%= link_to 'Back', extraworks_path %>
</div>
